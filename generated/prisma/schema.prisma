generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SpreadRecord {
  id         Int      @id @default(autoincrement())
  market     String   @db.VarChar(20)
  value      Decimal  @db.Decimal(20, 8)
  recordedAt DateTime @default(now())
}
